    <%= csrf_meta_tags %>

    <title>Tip Accordingly</title>
    
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  </head>
  <body>

    <%= yield %>

    <%= javascript_include_tag "http://yui.yahooapis.com/3.14.0/build/yui/yui-min.js" %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  </body>
</html>
