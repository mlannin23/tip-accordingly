<h1>Questions</h1>
 
<%= link_to 'New question', new_question_path %>

<table>
  <tr>
    <th>Text</th>
    <th>Weight</th>
    <th>Format</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.text %></td>
      <td><%= question.weight %></td>
      <td><%= question.format %></td>
      <td><%= link_to 'Show', question %></td>
      <td><%= link_to 'Edit', edit_question_path(question) %></td>
      <td><%= link_to 'Destroy', question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>